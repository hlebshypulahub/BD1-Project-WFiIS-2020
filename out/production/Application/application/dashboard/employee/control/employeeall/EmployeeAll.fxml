      <Button fx:id="employeeToFacilityButton" layoutX="14.0" layoutY="375.0" mnemonicParsing="false" onAction="#showAddEmployeeToFacility" prefHeight="58.0" prefWidth="217.0" text="Dodaj pracownika do obiektu">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <ComboBox fx:id="chooseFacility" layoutX="14.0" layoutY="445.0" prefHeight="25.0" prefWidth="217.0" promptText="Wybierz obiekt" />
