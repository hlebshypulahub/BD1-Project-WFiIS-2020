         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="employeeFromFacilityButton" layoutX="285.0" layoutY="374.0" mnemonicParsing="false" onAction="#showListEmployeeFromFacility" prefHeight="58.0" prefWidth="251.0" text="Wylistuj pracowników dla obiektu">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <ComboBox fx:id="chooseFacilityCopy" layoutX="285.0" layoutY="444.0" prefHeight="25.0" prefWidth="251.0" promptText="Wybierz obiekt" />
      <Button fx:id="listButton" layoutX="285.0" layoutY="476.0" mnemonicParsing="false" onAction="#listEmployeeFromFacility" prefHeight="40.0" prefWidth="96.0" text="Wylistuj">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</Pane>
